for_window [class="^.*"] border pixel 0

gaps inner 5
gaps outer 2

# Keep slack on workspace 4
assign [class="Slack"] $ws4

# Keep Emacs on workspace 3
assign [class="Emacs25"] $ws3

assign [class="Terminator"] $ws2
